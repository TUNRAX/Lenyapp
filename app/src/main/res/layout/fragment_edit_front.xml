<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterFront"
    android:elevation="3dp"
    android:outlineProvider="bounds"
    android:paddingBottom="2dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:text="Edite sus datos"
        android:textColor="@color/primary_text"
        android:textSize="26sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNombreEdit"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Nombre"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtApellidoEdit"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Apellido"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDireccionEdit"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Direccion"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtContrasenyaEdit"
            android:layout_width="251dp"
            android:layout_height="44dp"
            android:fontFamily="@font/roboto"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="355dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtRepContrasenyaEdit"
            android:layout_width="251dp"
            android:layout_height="47dp"
            android:fontFamily="@font/roboto"
            android:hint="Repetir Contraseña"
            android:inputType="textPassword"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnGuardar"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="425dp"
        android:fontFamily="@font/roboto"
        android:text="Registrarse" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtCiudadEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Ciudad"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="251dp"
        android:layout_height="52dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtFonoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:hint="Fono"
            android:inputType="number"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRealizar"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="425dp"
        android:fontFamily="@font/roboto"
        android:text="Realizar cambios" />
</FrameLayout>